<% content_for :page_title, @appointment.date_time %> 

<section class="section">
	<div class="container">
		<nav class="level">
		  <!-- Left side -->
		  <div class="level-left">
		    <p class="level-item">
		        <strong>Actions</strong>
		    </p>
		  </div>
		  <!-- Right side -->
		  <div class="level-right">
		  	<p class="level-item">
		    	<%= link_to "Edit", edit_appointment_path(@appointment), class:"button" %>
		  	</p>
		  	<p class="level-item">
				<%= link_to "Delete", appointment_path(@appointment), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
				</p>
		  </div>
		</nav>
		<hr/>

		<div class="date_time">
			<%= @appointment.date_time %>
		</div>
        <div class="appointment_type">
			<%= @appointment.appointment_type %>
		</div>
        <div class="notes"> Notes:
			<%= @appointment.notes %>
		</div>
	</div>
</section>

