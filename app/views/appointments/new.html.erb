<h1> Create New Appointment </h1>

<div class="section">
    <%= simple_form_for @appointment do |f| %>
        <div class="field">
            <div class="control">
            <%= f.input :appointment_type, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
            </div>
        </div>

        <div class="field">
            <div class="control">
            <%= f.input :date_time, input_html: { class: 'date' }, wrapper: false, label_html: { class: 'label'} %>
            </div>
        </div>

        <div class="field">
            <div class="control">
            <%= f.input :notes, input_html: { class: 'type' }, wrapper: false, label_html: { class: 'label'} %>
            </div>
        </div>
        <%= f.button :submit, 'Create New Appointment', class: "button is-primary" %>
    <% end %>
</div>